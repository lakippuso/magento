<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="todolist" resource="default" engine="innodb" comment="Inchoo Table 1">
        <column xsi:type="int" name="todo_id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="title" comment="Title"/>
        <column xsi:type="varchar" name="status" comment="Status"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="todo_id"/>
        </constraint>
    </table>
</schema>